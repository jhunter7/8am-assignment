# Application Configuration
NODE_ENV=development
PORT=3000
BUILD_NUMBER=local
GIT_COMMIT=unknown

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/webapp
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webapp
DB_USER=webapp_user
DB_PASSWORD=webapp_password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=webapp
KAFKA_GROUP_ID=webapp-group
KAFKA_TOPICS=user-events,notifications

# Security Configuration
JWT_SECRET=your-jwt-secret-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production
BCRYPT_ROUNDS=12
API_KEY=your-api-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring Configuration
PROMETHEUS_PORT=9090
LOG_LEVEL=info
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
AUTH_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3003

# Feature Flags
FEATURE_AUTHENTICATION=true
FEATURE_RATE_LIMITING=true
FEATURE_MONITORING=true
FEATURE_LOGGING=true

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false