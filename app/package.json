{
  "name": "8am-webapp",
  "version": "1.0.0",
  "description": "Internet-facing web application for 8am infrastructure",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:validation": "jest --testPathPattern=validation",
    "test:performance": "k6 run tests/performance/load-test.js",
    "build": "echo 'Build complete'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "prom-client": "^14.2.0",
    "dotenv": "^16.0.3",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "kafkajs": "^2.2.4",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "k6": "^0.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "webapp",
    "express",
    "nodejs",
    "microservice",
    "8am"
  ],
  "author": "8am Infrastructure Team",
  "license": "MIT"
}